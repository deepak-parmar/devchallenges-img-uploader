{
    "version": 2,
    "buildCommand": "npm run watch-css & vite build",
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "dist/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/upload/",
            "dest": "server.js"
        },
        {
            "src": "/view/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/",
            "dest": "dist/index.html"
        },
        {
            "src": "/(.+)",
            "dest": "dist/$1"
        }
    ]
}